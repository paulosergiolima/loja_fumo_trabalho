<!DOCTYPE html>
<!--
	Essa pagina também sera renderizado pelo ejs, portanto
	products será o array contendo os produtos, e funcionara como o product, porém sendo um array
	então vc acessara o primeiro elemento usando products[0].price
-->
<html lang="en">

<head>
	<meta charset="UTF-8">
	<link rel="stylesheet" href="/css/products.css">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Fumoland - Produtos</title>
</head>

<body>
	<main>
		<header>
			<div class="initial_header">
				<div id="user" class="option" onmouseenter="showUserOptions()" onmouseleave="hideUserOptions()">
					User
					<ul hidden id="user_list" class="user_list">
						<li class="user_option" onclick="showCreateUser()">Create User</li>
						<li class="user_option">Log In</li>
					</ul>
				</div>
				<div class="option">
					<a class="headerlink" href="/">Home</a>
				</div>
				<div class="option">
					<a class="headerlink" href="categories"> Categorias </a>
				</div>
				<div class="option">
					<a href="products" class="headerlink">Produtos</a>
				</div>
				<div class="option carrinho">
					<a href="cart" class="headerlink">Carrinho</a>
				</div>
			</div>
		</header>
		<div class="list_of_products">
			<!-- Como um produto sera estruturado -->
			<% for (product of products) { %>
				<div class="product">
					<a class="headerlink" href="products/<%= product.name %>"> <img class="product_image" src="/imgs/<%= product.img_path %>" alt=""> </a>
					<a class="headerlink" href="products/<%= product.name %>"> <div class="product_name"><%= product.name %></div></a>
					<div class="product_categories">
						<% for (category of product.categories) { %>
						<a class="headerlink" href="categories/<%= category.name %>"> <div class="product_category"><%= category.name %></div> </a>
						<% } %>
					</div>
					<div class="product_price"><%= product.price %></div>
				</div>
				<% } %>

		</div>
	</main>

</body>

</html>
<script>
	userList = document.getElementById("user_list")
	user = document.getElementById("user")
	function showUserOptions() {
		userList.hidden = false
		user.classList.add("big")
	}
	function hideUserOptions() {
		userList.hidden = true
		user.classList.remove("big")
	}
</script>