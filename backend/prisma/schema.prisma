// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
	id Int @id @default(autoincrement())
	email String @unique
	name String? 
	password String
	favorites Product[]
}

model Product {
	id Int @id @default(autoincrement())
	name String
	desc String
	price Float
	//Esse atributo cria uma conex√£o com o user, um user pode ter multiplos produtos
	user User? @relation(fields: [userId], references: [id])
	userId Int?
	
}


